{% extends 'layout.twig' %}

{% block content %}
<h1>Listas de regalos de {{ session.nombre }}</h1>
<table>
	<thead>
		<tr>
			<th>LISTA</th>
			<th colspan="3">OPCIONES</th>
		</tr>
	</thead>
	<tbody>
		{% for lista in listas %}
		<tr>
			<td>{{ lista.NOMBRE }}</td>
			<td><a href="{{ path_for('producto.lista', {'idLista': lista.ID, 'nombreLista': lista.NOMBRE})}}">Ver</a></td>
			<td><a href="{{ path_for('') }}">Eliminar</a><td>
		</tr>
		{% endfor %}
	</tbody>
</table>
<p><a href="{{ path_for('lista.nueva') }}">Nueva lista</a></p>
<p><a href=".">Volver</a></p>
{% endblock %}