{% extends 'layout.twig' %}

{% block content %}
<div class="main-w3layouts wrapper">
  <h1>{{ nombreLista }}</h1>
    <div class="main-agileinfo">
	 <div class="agileits-top"> 
	    <table>
		  <thead>
		 	<tr>
		  	<th colspan="3">IMAGEN</th>
			<th>PRODUCTO</th>
			<th>ESTADO</th>
			<th>ENLACE</th>
			<th colspan="3">OPCIONES</th>
			</tr>
		  </thead>
		</div>
	</div>
	<tbody>
		{% for producto in productos %}
		<tr>
			<td><img src="{{base_url()}}/imagenes/{{producto.IMAGEN}}" alt="{{ producto.NOMBRE_PRODUCTO }}" height="80" width="80"> </td>
			<td>{{ producto.NOMBRE_PRODUCTO }}</td>
						<td>
				{% if producto.COMPRADO == 1 %}
					Comprado
				{% else %}
					Pendiente
				{% endif %}
			</td>
			<td><a class="inputLink" href="{{ producto.ENLACE_COMPRA }}" target="_blank">Link</a></td>
			<td>
				<form action="{{ path_for('producto.cambiarEstado', {'idLista': idLista, 'nombreLista': nombreLista})}}"  method="post">
					<input type="hidden" name="id" id="id" value="{{producto.ID}}">
					<input type="hidden" name="id_lista" id="id_lista" value="{{idLista}}">
					<input type="hidden" name="nombreLista" id="nombreLista" value="{{nombreLista}}">
					{% if producto.COMPRADO == 1 %}
						<input type="hidden" name="estado" id="estado" value="0">
						<button type="submit">Pendiente</button>
					{% else %}
						<input type="hidden" name="estado" id="estado" value="1">
						<button type="submit">Comprado</button>
					{% endif %}
				</form>
			</td>
			<td><a class="inputLink" href="{{ path_for('producto.editar', {'id': producto.ID, 'idLista': idLista, 'nombreLista': nombreLista})}}">Editar</a></td>
            <td>
				<form action="{{ path_for('producto.eliminar')}}"  method="post">
					<input type="hidden" name="id" id="id" value="{{producto.ID}}">
					<input type="hidden" name="idLista" id="idLista" value="{{idLista}}">
					<input type="hidden" name="nombreLista" id="nombreLista" value="{{nombreLista}}">
					<button class="inputLink" type="submit">Eliminar</button>
				</form>
			</td>
		</tr>
		{% endfor %}
		</tbody>
	</table>

<p><a class="inputLink" href="{{ path_for('producto.nuevo', {'id': id, 'idLista': idLista, 'nombreLista': nombreLista}) }}">AÃ±adir Producto</a></p>
<p><a class="inputLink" href="{{ path_for('lista.misListas') }}">Volver</a></p>
</div>
{% endblock %}