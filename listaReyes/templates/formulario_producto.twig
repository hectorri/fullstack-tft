{% extends 'layout.twig' %}

{% block content %}

{# manda los datos del formulario a la ruta 'usuario.registro' con un método post #}
<form action="{{ path_for('producto.nuevo', {'idLista': idLista, 'nombreLista': nombreLista})}}"  method="post" autocomplete="off">
	<input type="hidden" name="id_lista" id="id_lista" value="{{idLista}}">
  	<input type="hidden" name="nombreLista" id="nombreLista" value="{{nombreLista}}">
  <label for="nombre_producto">Nombre
		<input type="text" name="nombre_producto" id="nombre_producto" placeholder="Nombre Producto">
    </label>
	<label for="descripcion">Descripción
		<input type="text" name="descripcion" id="descripcion" placeholder="Descripción">
    </label>
    <label for="imagen">Imagen del Producto
		<input type="text" name="imagen" id="imagen" placeholder="">
    </label>
    <label for="enlace_compra">Url Producto
		<input type="text" name="enlace_compra" id="enlace_compra" placeholder="Enlace">
    <button type="submit">Aceptar</button>
</form>
{% endblock %}